<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_theme_color</item>
        <item name="colorPrimaryDark">@color/app_theme_color</item>
        <item name="colorAccent">@color/app_theme_color</item>
        <item name="android:textColorPrimary">@color/md_white_1000</item>
        <item name="android:textColorSecondary">@color/md_white_1000</item>
        <item name="android:itemTextAppearance">@style/menuItemColor</item>
        <item name="actionOverflowMenuStyle">@style/OptionsMenu</item>
        <item name="actionMenuTextColor">@color/md_white_1000</item>


        <item name="android:windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/app_theme_color</item>
    </style>

    <style name="WhiteActionBarThemeOverlay" parent=""></style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/app_theme_color</item>
    </style>

    <style name="HeaderBar">
        <item name="android:background">?colorPrimary</item>
    </style>

    <style name="Widget.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar"></style>

    <style name="Widget.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">#fff</item>
    </style>

    <style name="menuItemColor">
        <item name="android:textColor">@color/app_theme_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OptionsMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/md_white_1000</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />


    <style name="DarkRaiseWaveButtonRippleStyle" parent="Material.Drawable.Ripple.Wave">
        <item name="android:background">@null</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Button</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

</resources>
